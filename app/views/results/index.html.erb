<h1>Results</h1>

<%= provide(:title, 'Arcana | Results')%>
<table class="table">
  <thead>
    <tr>
      <th id="student-sort">Student</th>
      <th id="subject-sort">Subject</th>
      <th id="assessment-sort">Assessment</th>
      <th id="mark-sort" >Mark</th>
      <th><input type="text" class="search-results" name="search" placeholder="Search"></th>
    </tr>
  </thead>

  <tbody class="res-table">
    
<%= form_for(Result.new) do |f| %>
	<tr>	
		<td><%= current_user.full_name %></td>
		<td></td>
  		<td><%= f.collection_select :assessment_id, Assessment.all, :id, :title %></td>
		<td><%= f.text_field :mark, :placeholder => "Mark" %></td>
		<td><a class="btn result-submit">Add</a></td>
  	</tr>
<% end %>
<div id="results-special"></div>
  </tbody>
</table>
