<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6">
    <%= form_for(:session, url: sessions_path) do |f| %>
    <fieldset>
		<%= f.text_field :email, :placeholder => "Email", :class => "input" %>
		<%= f.password_field :password, :placeholder => "Password", :class => "input" %><br>
      	<%= f.submit "Sign In", class: "btn" %>  	</fieldset>

    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>