<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6">
    <%= form_for(:session, url: sessions_path) do |f| %>
    <fieldset>
		<%= f.text_field :email, :placeholder => "Email" %><br><br>
		<%= f.password_field :password, :placeholder => "Password" %><br><br>
	
      	<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>  	</fieldset>

    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>