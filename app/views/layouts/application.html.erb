<!DOCTYPE html>
<html>
   <head>
   	<script type="text/javascript">
	</script>
      <title><%= yield(:title) %></title>
      <%= stylesheet_link_tag    "application", media: "all" %>
     <%= javascript_include_tag "application" %>
      <%= favicon_link_tag 'favicon.png' %>
      <%= csrf_meta_tags %>
   </head>
   <body>
      <header class="navbar navbar-fixed-top active center">
         <div class="navbar-inner">
            <div  style="width: auto;">
               <%= link_to "Arcana", root_path, id: "logo" %>
                 <% if signed_in? %>
               <div class="nav-collapse">
                  <form id="custom-search-form" action="/series" class="form-search form-horizontal pull-right">
                     <div class="input-append span3 offset3">
                        <input type="text" id="search-main" class="search-query" name="search" placeholder="Search">
                        <button type="submit" class="btn"><i class="icon-search"></i></button>
                     </div>
                  </form>
                    <ul class="nav header-menu pull-left">
 
                 	<% if params[:controller] == 'subjects' %>
                     	<li class="nav-selected"><%= link_to "Subjects", subjects_path %></li>
                 	<% else %>
 	                     <li><%= link_to "Subjects", subjects_path %></li>
                 	<% end %>
                 	
                 	<% if params[:controller] == 'students' && (params[:action] != 'show' && params[:action] != 'edit') %>
                     	<li class="nav-selected"><%= link_to "Students", students_path %></li>
                 	<% else %>
 	                     <li><%= link_to "Students", students_path %></li>
                 	<% end %>
                 	
                 	<% if params[:controller] == 'results' %>
                     	<li class="nav-selected"><%= link_to "Results", results_path %></li>
                 	<% else %>
 	                     <li><%= link_to "Results", results_path %></li>
                 	<% end %>

   					<% if params[:controller] == 'students' && (params[:action] == 'show' || params[:action] == 'edit') %>
	                  	<li id="fat-menu" class="dropdown nav-selected">
   					<% else %>
   						<li id="fat-menu" class="dropdown">
   					<% end %>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                           <li><%= link_to "Profile", current_user %></li>
                           <li><%= link_to "Settings", edit_student_path(current_user) %></li>
                           <li class="divider"></li>
                          <li><%= link_to 'My Results', '/results#filter/' << current_user.full_name.gsub(' ', '-') %></li>
                           <li class="divider"></li>
                           <li><%= link_to "Sign out", '/signout', method: "delete" %></li>
                        </ul>
                     </li>
                     <% end %>
                  </ul>
               </div>
            </div>
         </div>
      </header>
      <div class="container">
         <div class="row-fluid col-wrap" id="main">
            <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>

           <%= yield %>
            <footer class="footer">
              <small>
              Copyright 2013 Arcana
              </small>
              <nav>
                 <ul>
                    <li><%= link_to "About", '/about' %></li>
                    <li> | </li>
                    <li><%= link_to "Legal Information",  '/legal' %></li>
                 </ul>
              </nav>
            </footer>
      </div>
   </body>
</html>
