<%= provide(:title, 'Arcana | Subjects')%>
<h1>All Subjects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Leader</th>
      <th>Average</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.name, '/results#filter/' << subject.name %></td>
        <td><%= link_to subject.leader.full_name, '/results#filter/' << subject.leader.full_name.gsub(' ', '-') %></td>
        <td><%= subject.leader.subject_average(subject) %></td>
        <td><%= link_to "Assessment Tasks", assessments_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin %>
	<%= link_to 'New Subject', new_subject_path %>
<% end %>
