<%= provide(:title, 'Arcana | Types')%>
<p id="notice"><%= notice %></p>

<h1>
  <%= @type.name %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Type</th>
      <th>Title</th>
      <th>Exam</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @type.assessments.each do |assessment| %>
      <tr>
        <td><%= link_to assessment.subject.name, assessment.subject %></td>
        <td><%= link_to assessment.type.name, assessment.type %></td>
        <td><%= link_to assessment.title, assessment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user && current_user.admin %>
<%= link_to 'Edit', edit_type_path(@type) %> |
<% end %>
<%= link_to 'Back', types_path %>
