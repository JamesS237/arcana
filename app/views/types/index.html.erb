<%= provide(:title, 'Arcana | Types')%>
<h1>All Types</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= link_to type.name, '/results#filter/' << type.name.gsub(' ', '-')  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin %>
	<%= link_to 'New Type', new_type_path %>
<% end %>
